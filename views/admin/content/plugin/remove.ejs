<% locals.menu = 'admin_content'; %>
<% include ../../includes/content_header %>
<div class="card-box">
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                内容管理
            </div>
            <div class="col-sm-6">
                <div class="button-list text-right">
                    <a class="btn btn-create" href="/admin/content">
                        <i class="icon-reply"></i>返回列表
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-content">
        <form action="/admin/content/<%= locals.context.content.id %>/remove" method="POST">
            <div class="row form-panel">
                <div class="col-sm-6">
                    <input class="form-control" type="text" placeholder="请输入内容名称" name="name" value="<%= locals.context.content.name || '' %>" disabled="true">
                    <input class="form-control" type="text" placeholder="请输入内容权重" name="weight" value="<%= locals.context.content.weight || '' %>" disabled="true">
                    <div class="form-input clearfix">
                        <button class="btn-submit fr" type="submit">删除内容</button>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-description">
                        说实话实话实说
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<% include ../../includes/content_footer %>