<% 
    locals.menu = 'admin_content'; 
    var content = locals.context.content;
%>
<% include ../../includes/content_header %>
<div class="card-box">
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                内容管理
            </div>
            <div class="col-sm-6">
                <div class="button-list text-right">
                    <a class="btn btn-create" href="/admin/content">
                        <i class="icon-reply"></i>返回列表
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-content">
        <form action="/admin/content/<%= content.type %>/<%= content.id %>/remove" method="POST" enctype='multipart/form-data'>
            <div class="row form-panel">
                <div class="col-sm-6 row">
                    <input class="form-control" type="text" placeholder="请输入插件名称" name="title" value="<%= content.title %>" disabled="true">
                    <input type="file" class="form-control" name="themesImage" accept="image/*" disabled="true">
                    <select class="form-control" name="category" value="<%= content.category %>">
                        <% locals.context.categorys.forEach(function (category) { %>
                            <% if (content.category.id == category.id) { %>
                            <option value="<%- category.id %>"><%= category.name %></option>
                            <% } %>
                        <% }) %>
                    </select>

                    <select class="form-control" name="tag" value="<%= content.tag %>">
                        <% locals.context.tags.forEach(function (tag) { %>
                            <% if (content.tags[0].id == tag.id) { %>
                            <option value="<%- tag.id %>"><%= tag.name %></option>
                            <% } %>
                        <% }) %>
                    </select>
                </div>
                <div class="col-sm-6">
                    <div class="form-description">
                        <input class="form-control" type="text" placeholder="请输入插件关键字" name="keywords" value="<%= content.keywords %>" disabled="true">
                        <textarea class="form-control" name="discription" rows="10" tabindex="4" placeholder="请输入插件描述" disabled="true"><%= content.discription %></textarea>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div id="content" class="content-box"><%- content.content %></div>
                    <div class="form-input clearfix">
                        <button class="btn-submit fr" type="submit">删除文章</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<% include ../../includes/content_footer %>
<script type="text/javascript">
    $('#content').trumbowyg({
        btnsDef: {
            image: {
                dropdown: ['insertImage', 'base64'],
                ico: 'insertImage'
            }
        },
        btns: ['viewHTML',
            '|', 'formatting',
            '|', 'bold', 'em', 'del', 'underline', 'horizontalRule',
            '|', 'justifyLeft', 'justifyCenter', 'justifyRight', 'justifyFull',
            '|', 'btnGrp-lists',
            '|', 'image', 'link']
    });
</script>