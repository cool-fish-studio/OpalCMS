<% locals.menu = 'admin_category'; %>
<% include ../includes/content_header %>
<div class="card-box">
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                类别管理
            </div>
            <div class="col-sm-6">
                <div class="button-list text-right">
                    <a class="btn btn-create" href="/admin/category">
                        <i class="icon-reply"></i>返回列表
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-content">
        <form action="/admin/category/<%= locals.context.category.id %>/update" method="POST">
            <div class="row form-panel">
                <div class="col-sm-6">
                    <input class="form-control" type="text" placeholder="请输入类别名称" name="name" value="<%= locals.context.category.name || '' %>">
                    <input class="form-control" type="text" placeholder="请输入类别权重" name="weight" value="<%= locals.context.category.weight || '' %>">
                    <div class="form-input clearfix">
                        <button class="btn-submit fr" type="submit">修改类别</button>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-description">
                        说实话实话实说
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<% include ../includes/content_footer %>